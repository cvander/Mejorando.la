// webfonts
@css {
@font-face {
	font-family: 'open sans';
	src: url("../fonts/opensans-light-webfont.eot");
	src: url("../fonts/opensans-light-webfont.eot?#iefix") format('embedded-opentype'), url("../fonts/opensans-light-webfont.woff") format('woff'), url("../fonts/opensans-light-webfont.ttf") format('truetype'), url("../fonts/opensans-light-webfont.svg#OpenSansLight") format('svg');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'open sans';
	src: url("../fonts/opensans-bold-webfont.eot");
	src: url("../fonts/opensans-bold-webfont.eot?#iefix") format('embedded-opentype'), url("../fonts/opensans-bold-webfont.woff") format('woff'), url("../fonts/opensans-bold-webfont.ttf") format('truetype'), url("../fonts/opensans-bold-webfont.svg#OpenSansBold") format('svg');
	font-weight: bold;
	font-style: normal;
}
}


// nib framework + custom mixins & classes
@import "classes.styl"


// variables
font_opensans = 'open sans', sans-serif


// global tags
body
	background #fff url("../images/live/cinta_1920.jpg") repeat-y fixed
	font-family font_opensans
	height 100%
	margin 0
	padding 0

footer
	color #3D4043
	// left 0
	margin-top -68px
	position relative
	// top 100%
	width 100%

	.izquierda
		@extends .clearfix
		background url("../images/live/footer.png") no-repeat right top
		height 68px
		left 0
		position absolute
		text-transform uppercase
		top 0
		width 280px

		span
			display block

			&:first-child
				font-size 20px
				letter-spacing -1px

				+ span
					font-size 12px
					font-weight bold

		.text
			padding 15px 0 0 35px

	.derecha
		box-sizing border-box
		font-size 25px
		font-weight bold
		padding-left 280px
		line-height 68px
		text-align center
		width 100%
		max-width 1280px

		&
		a
			color #fff

		a
		span
			margin 0 3%

header
	border-top 7px solid #fff
	margin-bottom 10px
	position relative
	width auto

	&:before
		background url("../images/logos/adorno-logo.png") no-repeat 65% 0
		content " "
		height 35px
		left 50% + 10
		margin-left 103px
		position absolute
		width 31px

	h1
		margin 0

		img
			height 75px

	img
		vertical-align bottom

html
	margin 0
	height 100%

img
	border 0

input.text-field
	background #003e73
	border 1px solid #409fd6
	border-left 0
	color #fff
	float left
	font 13px/30px font_opensans
	height 30px
	margin 0
	padding 0
	position absolute
	left 0
	top 0
	width 100%
	&:focus
		outline 0

// classnames
.btn_facebook iframe
	width 44px !important


// ids
#col1
	// bottom 0
	// left 0
	// position absolute
	// top 0
	float left
	width 60%

#col2
	// bottom 0
	// right 0
	// position absolute
	// top 0
	float right
	width 35%

	iframe
		background #3d4043
		height 100%
		position absolute
		width 35%

#cristalab
#maestros
	// descomenta esto para posicionar los logos verticalmente
	// margin-top -(28px/2 + 10)
	// top 50%
	position absolute
	top 10px

	img
		height 28px

#contenido
	// bottom 68px + 40
	// left 7.5%
	// position absolute
	// top 113px + 25
	margin 0 auto
	padding-bottom 68px
	width 85%

	.wrap
		@extends .clearfix
		position relative


#cristalab
	left 70%
	margin-left 103px

#email-container
#name-container
	@extends .clearfix
	margin 0 0 15px
	position relative
	
	span
		position absolute
		right 0

#email-container
	span
		left 100px

	.txt
		width 50px
#fila2
	height 200px - 25
	margin 25px 0 0
	position relative

#formulario
	@extends .clearfix
	font-size 13px
	font-weight bold
	text-transform uppercase
	position absolute
	top 0
	left 0
	right 333px + 35

	.tit
		color #fff
		clear both
		display block
		margin-bottom 15px

	.txt
		background url("../images/live/label_input.png") no-repeat right
		color #535456
		float left
		clear left
		height 32px
		line-height 32px
		padding 0 35px 0 15px

#inscribete-btn
	background url("../images/live/button.png") no-repeat !important
	border 0
	display block
	clear both
	color #fff
	float right
	font bold 13px font_opensans
	height 31px
	line-height 31px
	padding 0 0 0 18px
	text-transform uppercase
	width 158px

#maestros
	left 50%

#name-container
	span
		left 120px

	.txt
		width 70px

#social
	float right

	> div
		background rgba(#000, 0.3)
		border-radius()
		float left
		height 62px
		margin 0 0 0 10px
		padding 10px

		&:first-child
			margin 0

#video
	background #000
	border 6px solid #338ed3
	border-radius()
	// bottom 200px
	left -6px
	overflow hidden
	position relative
	top 0
	width 100%

	a
		padding 0 !important

		img
			left 50%
			margin-left -80px
			margin-top -80px
			position absolute
			top 50%

	a
	embed
	object
		background black
		height 100% !important
		left 0
		position absolute
		top 0
		width 100% !important

	img.video
		height auto
		width 100%

	script
		@extends .hidden

#wrapper
	// padding-bottom 68px
	min-height 100%
	position relative

	&:before
		bottom 0
		box-shadow 0 0 250px rgba(0,0,0,0.90) inset
		content " "
		left 0
		position absolute
		right 0
		top 0


// media queries
// Full desktop mode with 2 column social widget
@media screen and (max-width:1280px)
	#formulario
		right 178px + 35

	#social .btn_facebook
		clear left
		margin 10px 0 0
		padding 10px 17px
	
	#social .btn_googlemas
		margin 10px 0 0 10px 
		padding 10px 20px 

// Full desktop mode, small header, no footer
@media screen and (max-height:700px)
	footer
		display none

	header h1 img 
		height 45px
	
	#contenido
		padding-bottom 25px

// Mobile portrait mode, video and chat only
@media screen and (max-width:768px)
	footer,
	header,
	#formulario,
	#social
		display none

	#col1
	#col2
	#contenido
		float none
		width auto

	#col2 iframe
		width 100%
	
	#fila2 
		height auto
		margin 0

	#video
		border 0
		border-radius 0
		left 0

// Mobile landscape mode, video only
@media screen and (max-width:768px) and (orientation:landscape)
	#col2
	#video img.video
		display none

	#contenido
		padding-bottom 0 !important
	
	#contenido .wrap,
	#video,
	#wrapper
		position static
